@page
@model Reservation.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Get a MF Room</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input readonly asp-for="Reservation.ClientName" class="form-control" />
                <span asp-validation-for="Reservation.ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Room Location</label>
                <input asp-for="Reservation.Location" class="form-control" />
                <span asp-validation-for="Reservation.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Yo" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

