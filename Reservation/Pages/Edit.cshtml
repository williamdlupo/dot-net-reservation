@page
@model Reservation.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Reservation.ClientName" class="form-control" readonly />
                <span asp-validation-for="Reservation.ClientName" class="text-danger"></span>
                <label class="control-label">Location</label>
                <input asp-for="Reservation.Location" class="form-control" />
                <span asp-validation-for="Reservation.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
